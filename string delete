#include<stdio.h>
#include<string.h>
int main(void)
{
  char ch,str[400];
  int i,k;
  printf("enter the sentence\n");
  gets(str);
  printf("enter the character you want to delete\n");
  scanf("%s", &ch);
  for(i=0;str[i]!='\0';i++)
    {
      if(str[i]==ch)
        for(i=k;str[k]!='\0';k++)
        {
            str[k]=str[k+1];
        }
     else continue;
    }

  printf("updated senctence is \n");
  puts(str);
  printf("\n");
}
